{
  "root": true,
  "extends": "airbnb-base",
  "env": {
    "browser": true
  },
  "rules": {
    "import/no-extraneous-dependencies": "off"
  },
  "overrides": [
    {
      "files": "test/**/*.js",
      "env": {
        "mocha": true
      },
      "globals": {
        "expect": true
      },
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
